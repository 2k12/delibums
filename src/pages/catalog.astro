---
import Layout from "../layouts/Layout.astro";


const products = [
  {
    id: 1,
    image: "/choco_ball.png",
    name: "ChocoBum Grande Normal",
    price: "$3.00",
    description: "Delicioso bombón cubierto de chocolate oscuro con relleno cremoso. Ideal para los amantes del sabor clásico.",
  },
  {
    id: 2,
    image: "/choco_ballw.png",
    name: "ChocoBum Grande Blanco",
    price: "$3.00",
    description: "Suave cobertura de chocolate blanco con centro dulce y textura irresistible. Perfecto para los paladares más finos.",
  },
  {
    id: 3,
    image: "/choco_ball_px2.png",
    name: "Pack x 2 ChocoBum Grande Normal",
    price: "$5.00",
    description: "Doble placer con dos unidades del clásico ChocoBum. Ideal para compartir o disfrutar en cualquier momento.",
  },
  {
    id: 4,
    image: "/choco_ball_px2w.png",
    name: "Pack x 2 ChocoBum Grande Blanco",
    price: "$5.00",
    description: "Disfruta el doble de la suavidad del chocolate blanco con este práctico pack para regalar o compartir.",
  },
  {
    id: 5,
    image: "/choco_ball_px3.png",
    name: "Pack x 3 ChocoBum Pequeña Normal",
    price: "$5.00",
    description: "Tres pequeñas delicias bañadas en chocolate oscuro, perfectas para un antojo dulce o como detalle especial.",
    tag: "Nuevo"
  },
  {
    id: 6,
    image: "/choco_ball_px3w.png",
    name: "Pack x 3 ChocoBum Pequeña Blanco",
    price: "$5.00",
    description: "Trío de bombones cubiertos de chocolate blanco, suaves y dulces en cada bocado. Ideal para cualquier ocasión.",
    tag: "Nuevo"
  },
  {
    id: 7,
    image: "/hchoco_ball_px3.png",
    name: "Halloween Pack x 3 ChocoBum Normal",
    price: "$7.00",
    description: "Versión especial de Halloween con cobertura de chocolate oscuro y diseño temático. ¡Solo disponible por temporada!",
    tag: "Solo por temporada"
  },
  {
    id: 8,
    image: "/hchoco_ball_px3w.png",
    name: "Halloween Pack x 3 ChocoBum Blanco",
    price: "$7.00",
    description: "Dulce edición de Halloween con cobertura de chocolate blanco y detalles festivos. ¡Edición limitada!",
    tag: "Solo por temporada"
  },
];


const whatsappNumber = "593994806701";
---
<Layout title="DeliBums">
  <main>
    <section class="w-full py-12 mt-20">
      <div class="text-center ">
        <h1 class="text-4xl font-playfair font-bold text-orange-900">
          Elige tu Producto Favorito
        </h1>
      </div>
    </section>

    <section class="py-5 px-4">
      <div class="container mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {products.map((product) => (
  <div class="relative bg-gray-100 rounded-lg shadow-lg overflow-hidden transition-transform duration-300 hover:scale-105 hover:shadow-2xl">
    {product.tag && (
      <div class="absolute top-3 left-3 bg-orange-400 text-white text-xs font-semibold px-3 py-1 rounded-full uppercase z-10 font-playfair shadow-md">
        {product.tag}
      </div>
    )}
    <img src={product.image} alt={product.name} class="w-96 h-auto object-cover mx-auto" />
    <div class="p-6">
      <h2 class="text-lg font-semibold text-gray-800 font-playfair">{product.name}</h2>
      <p class="text-red-500 font-bold text-xl mt-2">{product.price}</p>
      <p class="text-gray-600 mt-2">{product.description}</p>

      <!-- Buttons -->
      <div class="mt-6 flex gap-4">
        <!-- WhatsApp Button -->
        <a
          href={`https://wa.me/${whatsappNumber}?text=Hola,%20estoy%20interesado%20en%20${product.name}%20por%20${product.price}.%20¿Cómo%20puedo%20gestionar%20mi%20compra?`}
          target="_blank"
          rel="noopener noreferrer"
          class="w-full flex justify-center items-center gap-2 bg-red-400 text-white font-semibold py-2 rounded-lg hover:bg-red-600 transition-colors font-playfair"
        >
          <i class="fa fa-shopping-cart" aria-hidden="true"></i>
          Comprar
        </a>
      </div>
    </div>
  </div>
))}

      </div>
    </section>
  </main>
</Layout>
