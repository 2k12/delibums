<header
  class="fixed flex flex-col z-10 w-full py-4 bg-gray-100 sm:flex-row sm:justify-between sm:items-center sm:px-6"
>
  <div class="flex items-center justify-between w-full px-4 sm:px-0">
    <a href="/" class="text-gray-700 font-playfair font-bold text-xl">
      Deli<span class="span-custom text-red-400">Bums</span>
    </a>
    <button
      id="menu-toggle"
      class="block sm:hidden text-gray-700 focus:outline-none"
    >
      <i class="fa fa-bars text-2xl"></i>
    </button>
  </div>
  <nav
    id="menu"
    class="hidden flex-col gap-4 text-center font-playfair sm:flex sm:flex-row sm:gap-16 sm:items-center"
  >
    <a class="hover:text-red-400 text-gray-700 " href="/">Inicio</a>
    <a class="hover:text-red-400 text-gray-700 " href="/catalog">Catálogo</a>
    <a class="hover:text-red-400 text-gray-700 " href="/reviews">Reseñas</a>
    <!-- <a class="hover:text-red-400 text-gray-700 " href="/contact">Contacto</a> -->
  </nav>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.getElementById("menu-toggle");
    const menu = document.getElementById("menu");

    if (menuToggle && menu) {
      menuToggle.addEventListener("click", () => {
        menu.classList.toggle("hidden");
        menu.classList.toggle("flex");
      });
    }
  });
</script>
